<UserControl x:Class="NumericInputApp.NumericInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NumericInputApp"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="80">
    <Grid>

        <TextBox Name="numText"
                 Text="0.00"
                 FontFamily="Ubuntu"
                 FontSize="14"
                 FontWeight="Medium"
                 TextAlignment="Right"
                 VerticalContentAlignment="Center"
                 PreviewTextInput="numText_PreviewTextInput"
                 KeyDown="numText_KeyDown"
                 LostFocus="numText_LostFocus"></TextBox>
    </Grid>
</UserControl>
